{
	"AllowedHosts": "*",
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft": "Warning",
			"Microsoft.Hosting.Lifetime": "Information"
		}
	},
	"OpenIdConnect": {
		"Authority": "https://localhost:44300/",
		"ClientId": "mvc-windows",
		"ClientSecret": "secret",
		"GetClaimsFromUserInfoEndpoint": true,
		"ResponseType": "code id_token",
		"SaveTokens": true,
		"Scope": [ "email", "offline_access", "openid", "profile", "role-service" ],
		"TokenValidationParameters": {
			"NameClaimType": "name",
			"RoleClaimType": "role"
		}
	},
	"RoleService": {
		"Url": "https://localhost:44310/list/"
	}
}