{
	"AllowedHosts": "*",
	"ExceptionHandling": {
		"DeveloperExceptionPage": true
	},
	"JwtBearer": {
		"Authority": "https://localhost:44300",
		"TokenValidationParameters": {
			"ValidateAudience": false,
			"ValidTypes": [
				"at+jwt"
			]
		}
	},
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft": "Information",
			"Microsoft.Hosting.Lifetime": "Information"
		}
	}
}